<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Package Name="Exo" Manufacturer="Hexawyz" Version="1.0.0.0" UpgradeCode="07dd3181-64aa-475b-8787-b8a89e6420b5">
        <Icon Id="Exo.ico" SourceFile="..\exo-icon.ico"/>
        
        <MediaTemplate EmbedCab="yes" />
        
        <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeError)" />

        <Feature Id="Main">
            <ComponentGroupRef Id="Exo.Service" />
            <ComponentGroupRef Id="Exo.Overlay" />
            <ComponentGroupRef Id="Exo.Settings.Ui" />
        </Feature>

        <CustomAction Id="ExecuteOverlay"
            Execute="immediate"
            Impersonate="no"
            Return="asyncNoWait"
            FileRef="ExoOverlayExecutable"
            ExeCommand="" />

        <InstallExecuteSequence>
            <Custom Action="ExecuteOverlay" After="InstallFinalize" Condition="NOT Installed" />
        </InstallExecuteSequence>
    </Package>
</Wix>
