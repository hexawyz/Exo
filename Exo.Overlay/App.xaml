<Application x:Class="Exo.Overlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Exo.Overlay"
             StartupUri="OverlayWindow.xaml">
    <Application.Resources>
        <local:BooleanToVisibilityHiddenConverter x:Key="BooleanToVisibilityHiddenConverter" />
        <local:BooleanToVisibilityCollapsedConverter x:Key="BooleanToVisibilityCollapsedConverter" />
        <FontFamily x:Key="FluentSystemIcons-Resizable">/FluentSystemIcons-Resizable.ttf#FluentSystemIcons-Resizable</FontFamily>
        <local:GlyphFontToFontFamilyConverter x:Key="GlyphFontToFontFamilyConverter" SegoeFluentIcons="Segoe Fluent Icons" FluentSystemIcons="{StaticResource FluentSystemIcons-Resizable}" />
    </Application.Resources>
</Application>
